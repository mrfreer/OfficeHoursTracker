<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.officehourstracker.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

   <TextView
       android:id="@+id/textViewSignIn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="16dp"
       android:layout_marginTop="5dp"
       android:text="You are signed in as: "
       android:textAppearance="@style/TextAppearance.AppCompat.Body1"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:layout_constraintLeft_creator="1"
       tools:layout_constraintTop_creator="1"
       android:layout_marginStart="16dp" />

   <Button
       android:id="@+id/buttonViewInfo"
       android:layout_width="191dp"
       android:layout_height="49dp"
       android:onClick="showStudentTime"
       android:text="View Student Data"
       tools:layout_constraintRight_creator="1"
       tools:layout_constraintBottom_creator="1"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginEnd="9dp"
       app:layout_constraintRight_toRightOf="@+id/recyclerView"
       android:layout_marginBottom="10dp"
       android:layout_marginRight="9dp" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="253dp"
       android:layout_height="0dp"
       android:layout_marginBottom="12dp"
       android:layout_marginLeft="16dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="14dp"
       android:text="Select Your Class to Record the Student Attending Office Hours:"
       android:textAppearance="@style/TextAppearance.AppCompat.Body2"
       app:layout_constraintBottom_toTopOf="@+id/recyclerView"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textViewSignIn"
       app:layout_constraintVertical_bias="0.0"
       tools:layout_constraintBottom_creator="1"
       tools:layout_constraintLeft_creator="1"
       tools:layout_constraintTop_creator="1" />

   <android.support.v7.widget.RecyclerView
       android:id="@+id/recyclerView"
       android:layout_width="0dp"
       android:layout_height="249dp"

       android:layout_marginBottom="80dp"
       android:layout_marginEnd="23dp"
       android:layout_marginStart="23dp"
       app:layout_constraintBottom_toTopOf="@+id/buttonViewInfo"
       app:layout_constraintHorizontal_bias="0.416"
       app:layout_constraintLeft_toLeftOf="@+id/textView4"
       app:layout_constraintRight_toRightOf="@+id/textView4"
       tools:layout_constraintBottom_creator="1"
       tools:layout_constraintLeft_creator="1"
       tools:layout_constraintRight_creator="1"></android.support.v7.widget.RecyclerView>

   <Button
       android:id="@+id/button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:onClick="OnLogin"
       android:text="Test PHP"
       tools:layout_constraintBottom_creator="1"
       app:layout_constraintBottom_toTopOf="@+id/buttonViewInfo"
       android:layout_marginStart="31dp"
       tools:layout_constraintLeft_creator="1"
       android:layout_marginBottom="15dp"
       app:layout_constraintLeft_toLeftOf="@+id/buttonViewInfo"
       android:layout_marginLeft="31dp" />

</android.support.constraint.ConstraintLayout>
